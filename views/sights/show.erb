

<% if @sight.status == "visited" %>
<% @url = @sight.name + "%2C" + @sight.city.name + "%2C" + @sight.city.country.name + "|circle-start-V||"%>
<% else %>
<% @url = @sight.name + "%2C" + @sight.city.name + "%2C" + @sight.city.country.name + "|circle-end-B||"%>
<% end %>
<% @url.gsub!(' ','%2B') %>

<div class = "main_map">
  <img src ="<%= @map_url %><%= @url %>">
</div>


  <div class="left-panel"><h1>Edit <%= @sight.name %></h1>

  <form action="/sights/<%=@sight.id%>" method="post">
    <table>
      <tr>
        <td><label for="name">Site Name:</label></td>
        <td><input type="text" name="name" id="name" value="<%= @sight.name %>"></td>
        <td><label for="city">City</label></td>
        <td><input type="text" name="city" id="city" value="<%= @sight.city.name %>"></td>
        <td><label for="country">Country</label></td>
        <td><input type="text" name="country" id="country" value="<%= @sight.city.country.name %>"></td>
        <td></td>
        <td>
          <% if @sight.status == "visited" %>
          <div class="custom-select-visited">
            <select name="status" id="status">
            <option selected="selected" value="visited">Visited</option>
            <option value="bucket">Bucket List</option>
          <% else %>
          <div class="custom-select-bucket">
            <select name="status" id="status">
            <option selected="selected" value="bucket">Bucket List</option>
            <option value="visited">Visited</option>
          <% end %>
            </select>
          </div>
        </td>
        <td><input class="btn btn--action" type='submit' value="Update">
      </td>
      </tr>
    </table>
    </form>
    </div>


</div>
